<li>
	<article class="article-snippet">
		<div class="content | space-x-sm">
			<h3 class="post-heading">{{ post.data.title }}</h3>
			<span>{{ post.data.author}}</span>
			<span>{{ post.data.date | postDate}}</span>
			<p>{{ post.data.description }}</p>
			<a class="btn btn--primary" href="{{ post.url }}">Read
				More</a>

		</div>

		<picture class="aspect-1-1">
			<source type="image/webp" srcset="{{ post.data.image}}.webp">
			<source type="image/jpeg" srcset="{{ post.data.image}}.jpg">

			<img src="{{ post.data.image}}.jpg" alt="">
		</picture>
	</article>
</li>