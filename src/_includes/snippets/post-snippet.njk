<li class="list-style-none">
  <article class="article-snippet">
    <div class="content | col-gap-sm">
      <h3 class="post-heading">{{ post.data.title }}</h3>

      <span>{{ post.data.author}}</span>

      <span>{{ post.data.date | postDate}}</span>

      <p>{{ post.data.description }}</p>

      <a class="btn btn--primary" href="{{ post.url }}">Read
        More</a>
    </div>

    <picture class="picture aspect-1-1">
      <source media="(max-width: 399px)" srcset="/images/uploads/{{ post.data.image | cleanImageExtension }}-(800).webp"
        type="image/webp">
      <source media="(max-width: 399px)" srcset="/images/uploads/{{ post.data.image | cleanImageExtension }}-(800).jpg"
        type="image/webp">

      <source media="(min-width: 400px)"
        srcset="/images/uploads/{{ post.data.image | cleanImageExtension }}-(1200).webp" type="image/webp">
      <source media="(min-width: 400px)" srcset="/images/uploads/{{ post.data.image | cleanImageExtension }}-(1200).jpg"
        type="image/webp">

      <img src="/images/uploads/{{ post.data.image | cleanImageExtension }}.jpg" width="1200" height="1200"
        alt="{{ post.data.imageAlt  }}" loading="lazy">
    </picture>
  </article>
</li>