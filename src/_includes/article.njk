---
layout: 'base.njk'
---

<section class="section | ptb-lg">
	<div class="wrapper">
		<article class="article | col-gap">
			<h1>{{ title }}</h1>
			<!-- picture -->
			<picture class="aspect-3-2">
				<source type="image/webp" srcset="/images/uploads/{{ image | cleanImageExtension }}.webp">
				<source type="image/jpeg" srcset="/images/uploads/{{ image | cleanImageExtension }}.jpg">

				<img src="/images/uploads/{{ image | cleanImageExtension }}.jpg" alt="{{ imageAlt }}">
			</picture>

			{{ content | safe }}
		</article>
	</div>
</section>