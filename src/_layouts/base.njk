<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	{# global tags #}
	{% for item in meta.global_tags.list -%}
	<meta name="{{ item.name }}" content="{{ item.content }}">
	{% endfor %}

	{# page tags #}
	{% if page_name === "about" %}
	{% for item in meta.about_tags.list %}
	<meta name="{{ item.name }}" content="{{ item.content }}">
	{% endfor %}
	{% endif %}

	{% if page_name === "blog" %}
	{% for item in meta.blog_tags.list %}
	<meta name="{{ item.name }}" content="{{ item.content }}">
	{% endfor %}
	{% endif %}

	{% if page_name === "home" %}
	{% for item in meta.home_tags.list %}
	<meta name="{{ item.name }}" content="{{ item.content }}">
	{% endfor %}
	{% endif %}

	{% if page_name === "store" %}
	{% for item in meta.store_tags.list %}
	<meta name="{{ item.name }}" content="{{ item.content }}">
	{% endfor %}
	{% endif %}

	{# dynamic Tags #}
	{% if title %}
	<meta name="title" content="{{ title }} | {{global.site_name}}">
	{% endif %}
	{% if description %}
	<meta name="description" content="{{ description }}">
	{% endif %}

	<title>{{ page_title }}</title>

	<link rel="shortcut icon" href="#" />
	<link rel="stylesheet" href="/css/main.css">
	<script defer src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
	<noscript>Sorry! Your browser does not support JavaScript.!</noscript>

</head>

<body class="page {{ page_name }}-page">
	<div class="page-wrapper">

		{% include 'common/header.njk' %}

		<div class="page-body">
			<main class="main-content">

				{% block content %}{% endblock %}

				{{ content | safe }}
			</main>
		</div>

		{% include 'common/footer.njk' %}
	</div>
	<script src="/js/main.js"></script>
	<script>
		if (window.netlifyIdentity) {
			window.netlifyIdentity.on("init", user => {
				if (!user) {
					window.netlifyIdentity.on("login", () => {
						document.location.href = "/admin/";
					});
				}
			});
		}
	</script>
</body>

</html>